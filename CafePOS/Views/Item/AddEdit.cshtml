@model Item

@{
    ViewBag.Title = $"{ViewBag.Operation}";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="container">
    <div class="row border p-3 mb-5">
        <div class="col-md-12">
           <div>
                <h4 class="text-decoration-underline">Item > @ViewBag.Operation</h4>
                <hr class="mb-5" />
           </div>
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="AddEdit" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <input asp-for="ItemId" type="hidden" />
                            <input asp-for="CategoryId" type="hidden" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="ItemName" class="form-label"></label>
                            <input asp-for="ItemName" class="form-control" />
                            <span asp-validation-for="ItemName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="StockQuantity" class="form-label"></label>
                            <input asp-for="StockQuantity" class="form-control" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>
                        <div class="mb-3">                            
                            <label for="imageUpload" class="form-label">Upload Image</label>
                            <input type="file" asp-for="ImageFile" name="ImageFile" id="imageUpload" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>                       
                            @if (Model.ItemId != Guid.Empty)
                            {
                                <img src="@Url.Content("~/images/"+ ViewData["ImageUrl"])" style="width:100px; height:100px" class="mt-2" />
                            }                            
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label class="form-label">Select Category</label>                                       
                                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control" name="CatId">
                                    <option>Select Category</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3 d-flex">
                            <input type="checkbox" asp-for="TodaySpecial" name="TodaySpecial" id="TodaySpecial" class="form-check-input" />
                            <label class="form-label ms-2 d-block" for="TodaySpecial">Today Special</label>                            
                        </div>
                        <div class="mb-5 d-flex">
                            <input type="checkbox" asp-for="IsAvailable" name="IsAvailable" id="IsAvailable" class="form-check-input" />
                            <label class="form-label ms-2 d-block" for="IsAvailable">IsAvailable</label>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary me-3">Save</button>
                            <a asp-controller="Item" asp-action="Items" class="btn btn-secondary">Back</a>
                        </div>
                   </form>
                </div>
            </div>
        </div>
    </div>
</div>