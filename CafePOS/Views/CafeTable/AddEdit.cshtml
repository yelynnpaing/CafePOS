@model CafeTable
@{
    ViewBag.Title = $"{ViewBag.Operation}";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
           <div class="mb-">
                <h5 class="fw-bold text-decoration-underline">@ViewBag.Operation</h5>
                <hr />
           </div>
           <div class="border p-3">
               <form asp-action="AddEdit" method="post">
                   <div>
                       <input asp-for="Id" type="hidden"/>
                   </div>
                   <div class="mb-3">
                       <label class="form-label">Table Number </label>
                       <input type="text" asp-for="TableNumber" class="form-control" />
                       <span asp-validation-for="TableNumber" class="text-danger"></span>
                   </div>
                    <div class="mb-3">
                        <label class="form-label">Notes </label>
                        <input type="text" asp-for="Note" class="form-control" />                        
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-controller="CafeTable" asp-action="List" class="btn btn-secondary ms-3">Back</a>
               </form>
           </div>
        </div>
    </div>
</div>