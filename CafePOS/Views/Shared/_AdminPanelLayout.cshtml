<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CafePOS Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AdminPanel.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row" style="height: 100vh;">
            <div class="col-2 col-sm-3 col-xl-2 bg-dark transition-effect1" id="mainSidebar">
                <div class="sticky-top">
                    <nav class="navbar bg-dark border-bottom border-white mb-3" data-ds-theme="dark">
                        <div class="container-fluid">
                            <a class="navbar-brand text-white">
                                <i class="bi bi-house-door side-icon"></i><span class="d-none d-md-inline ms-2 side-label">MM Store</span>
                            </a>
                        </div>
                    </nav>
                    <nav class="nav flex-column">
                        <a href="#" class="nav-link icon-link-hover text-white navbar-left-side-item">
                            <i class="bi bi-speedometer2 side-icon"></i><span class="d-none d-md-inline ms-2 side-label">Dashboard Admin</span>
                        </a>
                        <a href="#" class="nav-link text-white navbar-left-side-item">
                            <i class="bi bi-cash-coin side-icon"></i><span class="d-none d-md-inline ms-2 side-label">Order</span>
                        </a>
                        <a class="nav-link text-white navbar-left-side-item" data-bs-toggle="collapse" href="#productCollapse"
                           role="button" aria-expanded="false" aria-controls="productCollapse" id="productCollapeBtn">
                            <i class="bi bi-grid side-icon"></i><span class="d-none d-md-inline ms-2 side-label">Products</span>
                            <span class="d-flex float-end"><i class="ms-2 bi bi-chevron-right" id="ProdChevronRight"></i></span>
                        </a>
                        <div class="collapse ps-sm-1 ps-md-3 ps-xl-3" id="productCollapse">
                            <a href="#" class="nav-link text-white navbar-left-side-item">
                                <i class="bi bi-cash-coin side-icon"></i><span class="d-none d-md-inline ms-2 side-label">Phone</span>
                            </a>
                            <a href="#" class="nav-link text-white navbar-left-side-item">
                                <i class="bi bi-cash-coin"></i><span class="d-none d-md-inline ms-2 side-label">TV</span>
                            </a>
                            <a href="#" class="nav-link text-white navbar-left-side-item">
                                <i class="bi bi-cash-coin side-icon"></i><span class="d-none d-md-inline ms-2 side-label">DVD</span>
                            </a>
                        </div>
                        <a class="nav-link text-white navbar-left-side-item" data-bs-toggle="collapse" href="#cusCollapse"
                           role="button" aria-expanded="false" aria-controls="cusCollapse" id="cusCollapseBtn">
                            <i class="bi bi-person-circle side-icon"></i><span class="d-none d-md-inline ms-2 side-label">Customers</span>
                            <span class="d-flex float-end"><i class="ms-2 bi bi-chevron-right" id="cusChevronRight"></i></span>
                        </a>
                        <div class="collapse ps-sm-1 ps-md-3 ps-xl-3" id="cusCollapse">
                            <a href="#" class="nav-link text-white navbar-left-side-item">
                                <i class="bi bi-cash-coin side-icon"></i><span class="d-none d-md-inline ms-2 side-label">Customer1</span>
                            </a>
                            <a href="#" class="nav-link text-white navbar-left-side-item">
                                <i class="bi bi-cash-coin"></i><span class="d-none d-md-inline ms-2 side-label">Customer2</span>
                            </a>
                            <a href="#" class="nav-link text-white navbar-left-side-item">
                                <i class="bi bi-cash-coin side-icon"></i><span class="d-none d-md-inline ms-2 side-label">Customer3</span>
                            </a>
                        </div>
                        <a href="#" class="nav-link text-white navbar-left-side-item">
                            <i class="bi bi-messenger side-icon"></i><span class="d-none d-md-inline ms-2 side-label">Messages</span>
                        </a>
                    </nav>
                </div>
            </div>
            <div class="col-10 col-sm-9 col-xl-10 p-0 m-0 transition-effect1" id="mainContent">
                <div class="sticky-top">
                    <nav class="navbar navbar-expand-lg bg-body-tertiary mb-3 shadow-sm">
                        <div class="container-fluid">
                            <ul class="navbar-nav me-auto">
                                <li class="nav-item">
                                    <div class="">
                                        <i class="bi bi-list fs-4 fw-bolder menu-icon rotate-reverse" id="menu-icon" style="cursor: pointer;"></i>
                                    </div>
                                </li>
                            </ul>
                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="#">
                                        <i class="bi bi-arrow-bar-right pe-1"></i>
                                        Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
                <div class="px-3">
                    <div class="">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="sticky-bottom bg-body-tertiary">
        <div class="py-3">
            <div class="text-center fw-bold">@@PowerBy YLP</div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/AdminPanel.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(".nav a").on("click", function(){
            $(".nav a").removeClass("active");
            $(this).addClass("active");
        })
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
