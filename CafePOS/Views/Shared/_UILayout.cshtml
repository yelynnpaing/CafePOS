<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CafePOS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CafePOS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AdminPanel.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid"> 
        <div class="row" style="height:100vh;">
            <div class="col-2 col-sm-1 col-md-1 col-lg-2 navbar-light bg-white box-shadow border-end" id="">
                <div class="sticky-top">
                    <nav class="navbar border-bottom">
                        <div class="container-fluid">
                            <div class="row justify-content-center">
                                <a class="navbar-brand fw-bold" asp-area="" asp-controller="UIPanel" asp-action="Index">
                                    <i class="bi bi-cup-hot-fill"></i>
                                    <span class="d-none d-lg-inline">MM Cafe</span>
                                </a>
                            </div>
                        </div>
                    </nav>
                    <nav class="mt-3">
                        <a href="#" class="nav-link icon-link-hover text-black navbar-left-side-item">
                            <i class="bi bi-house-door side-icon"></i><span class="d-none d-lg-inline ms-2 side-label">Home</span>
                        </a>
                        <a href="#" class="nav-link text-black navbar-left-side-item">
                            <i class="bi bi-card-checklist side-icon"></i><span class="d-none d-lg-inline ms-2 side-label">Menu</span>
                        </a>
                        <a href="#" class="nav-link icon-link-hover text-black navbar-left-side-item">
                            <i class="bi bi-credit-card side-icon"></i><span class="d-none d-lg-inline ms-2 side-label">Payment</span>
                        </a>
                        <a href="#" class="nav-link text-black navbar-left-side-item">
                            <i class="bi bi-cash-coin side-icon"></i><span class="d-none d-lg-inline ms-2 side-label">Order</span>
                        </a>
                    </nav>
                </div>
            </div>
            <div class="col-10 col-sm-11 col-md-11 col-lg-10 p-0">
                <div class="sticky-top">
                    <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
                        <div class="container-fluid">
                            <div class="nav-item me-3">
                                <form>
                                    <input class="form-control pe-5 me-2" type="search" placeholder="Search product or orders ... " aria-label="Search">
                                </form>
                            </div>
                             
                            <div class="nav-item me-3">
                                <a class="nav-link text-white btn btn-sm btn-primary px-2" asp-area="" asp-controller="UIPanel" asp-action="Index">
                                    <i class="bi bi-plus-circle-fill"></i>
                                    <span class="ms-2">Add Table</span>
                                </a>
                            </div>
                            <!-- 
                            <div class="navbar-collapse d-sm-inline-flex">                               
                                <ul class="navbar-nav mx-auto">
                                    <li class="nav-item me-3">
                                        <form>
                                            <input class="form-control pe-5 me-2" type="search" placeholder="Search product or orders ... " aria-label="Search">
                                        </form>
                                    </li>
                                    <li class="nav-item me-3 d-none d-lg-block">
                                        <input type="date" name="name" value="" class="form-control" />
                                    </li>
                                    <li class="nav-item me-3 d-none d-md-inline d-lg-block">
                                        <a class="nav-link text-white btn btn-sm btn-primary px-2" asp-area="" asp-controller="UIPanel" asp-action="Index">
                                            <i class="bi bi-plus-circle-fill"></i>
                                            <span class="d-none d-md-inline-block d-lg-inline ms-2">Add Table</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            -->
                        </div>
                    </nav>
                </div>
                <div class="container-fluid">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
                <div class="border-top footer text-muted bg-white position-sticky">
                    <div class="container">
                        &copy; 2025 - CafePOS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </div>
            </div>
        </div>
    </div>   
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
