<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CafePOS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CafePOS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/UI.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid"> 
        <div class="row" style="height:100vh;">
            <div class="col-2 col-sm-2 col-md-2 col-lg-2 navbar-light bg-white box-shadow border-end" id="">
                <div class="sticky-top" id="uiMainSidebar">
                    <nav class="navbar border-bottom nav-font">
                        <div class="container-fluid">
                            <div class="row mx-auto">
                                <a class="navbar-brand navbar-brand-font fw-bold navbar-brand-div my-1" asp-area="" asp-controller="UIPanel" asp-action="Home">
                                    <i class="bi bi-cup-hot-fill"></i>
                                    <span class="d-none d-lg-inline">MM Cafe</span>
                                </a>
                            </div>
                        </div>
                    </nav>
                    <nav class="mt-3 nav-font">
                        <a href="/mm-cafe/home" class="nav-link icon-link-hover text-black navbar-left-side-item fw-bold">
                            <i class="bi bi-house-door sidebar-icon"></i><span class="d-none d-lg-inline ms-2 side-label">Home</span>
                        </a>
                        <a href="/mm-cafe/items/list" class="nav-link text-black navbar-left-side-item fw-bold">
                            <i class="bi bi-grid sidebar-icon"></i><span class="d-none d-lg-inline ms-2 side-label">Menu</span>
                        </a>
                        <a href="/mm-cafe/order/create" class="nav-link text-black navbar-left-side-item fw-bold">
                            <i class="bi bi-card-checklist sidebar-icon"></i><span class="d-none d-lg-inline ms-2 side-label">Create Order</span>
                        </a>
                        <a href="/mm-cafe/order/view" class="nav-link text-black navbar-left-side-item fw-bold">
                            <i class="bi bi-cash-coin sidebar-icon"></i><span class="d-none d-lg-inline ms-2 side-label">View Order</span>
                        </a>                        
                        <a href="/admin/dashboard" target="_blank" class="nav-link icon-link-hover text-black navbar-left-side-item fw-bold ms-auto">
                            <i class="bi bi-person-fill-gear sidebar-icon"></i><span class="d-none d-lg-inline ms-2 side-label">Admin Panel</span>
                        </a>                                             
                    </nav>
                </div>
            </div>
            <div class="col-10 col-sm-10 col-md-10 col-lg-10 p-0">
                <div class="sticky-top">
                    <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow nav-font">
                        <div class="container-fluid">
                            <!--
                            <div class="nav-item">
                                <form asp-action="List" aps-controller="UIItem" method="get" class="d-flex">
                                    <input class="form-control pe-5 me-2" name="searchString" type="search" placeholder="Search item or others ... " aria-label="Search">
                                    <button type="submit" class="btn btn-outline-secondary btn-sm px-2 d-none d-md-block d-lg-block">Search</button>
                                </form>                                
                            </div> 
                            -->
                            <partial name="_LoginPartial" />
                        </div>                        
                    </nav>                    
                </div>
                <div class="container-fluid">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
                <div class="border-top footer text-muted bg-white position-sticky">
                    <div class="container">
                        &copy; 2025 - CafePOS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </div>
            </div>            
        </div>
    </div>   
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
