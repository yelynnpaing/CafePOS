@model OrderViewModel

@{
    ViewBag.Title = "Order Create Page";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="container-fluid">
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="row">
                @foreach (Item item in @Model.Items)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                        <form asp-action="AddItem" method="post">
                            <div class="card shadow-sm rounded">
                                <img src="@Url.Content("~/Images/"+item.ImageUrl)" class="card-img-top" style="height:150px;" />
                                <div class="card-body">
                                    <input type="hidden" value="@item.ItemId" name="itemId" />
                                    <h6 class="card-title mb-0">@item.ItemName</h6>
                                    <small class="card-text fw-bold text-black-50">Ks @item.Price</small>
                                    <div class="d-flex justify-content-between align-items-center mt-1">
                                        <input type="number" class="form-control d-inline-block me-2" name="itemQty" />
                                        <button type="submit" class="d-inline-block card-text btn btn-sm btn-secondary">Add</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                }
            </div>
        </div>

    </div>
</div>